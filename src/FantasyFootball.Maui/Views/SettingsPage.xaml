<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
  x:Class="FantasyFootball.Views.SettingsPage"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:vm="clr-namespace:FantasyFootball.ViewModels"
  xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
  Title="{Binding Title}"
  x:DataType="vm:SettingsViewModel">
  <ContentPage.Resources>
    <ResourceDictionary>
      <Color x:Key="Accent">#96d1ff</Color>
    </ResourceDictionary>
  </ContentPage.Resources>
  <StackLayout>
    <TableView Intent="Settings">
      <TableRoot>
        <TableSection Title="{xct:Translate Settings}">
          <ViewCell>
            <ViewCell.View>
              <StackLayout Padding="13,0" Orientation="Horizontal">
                <Label Text="{xct:Translate Language}" VerticalOptions="Center" />
                <Picker
                  HorizontalOptions="EndAndExpand"
                  ItemDisplayBinding="{Binding DisplayName}"
                  ItemsSource="{Binding SupportedLanguages}"
                  SelectedItem="{Binding SelectedLanguage}" />
              </StackLayout>
            </ViewCell.View>
          </ViewCell>
          <ViewCell>
            <ViewCell.View>
              <StackLayout Orientation="Horizontal">
                <Label Text="{xct:Translate SimSpeed}" VerticalOptions="Center" />
                <Slider
                  WidthRequest="200"
                  HorizontalOptions="EndAndExpand"
                  Maximum="100"
                  MaximumTrackColor="DarkRed"
                  Minimum="0"
                  MinimumTrackColor="LightGreen"
                  Value="{Binding SimulationSpeedMs}" />
              </StackLayout>
            </ViewCell.View>
          </ViewCell>
        </TableSection>
      </TableRoot>
    </TableView>
    <Button Command="{Binding ResetDatabaseCommand}" Text="{xct:Translate ResetDatabase}" />
  </StackLayout>
</ContentPage>
